{% extends '@Shop/base.html.twig' %}

{% block title %}Order Summary | {% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">

            <h3>Order #{{ order.id }}</h3>
            <hr>

            <div class="row">
                <div class="col-md-6">
                    <h4>Shipping to</h4>
                    <p>{{ order.addressId.address1 }}</p>
                    <p>{{ order.addressId.address2 }}</p>
                    <p>{{ order.addressId.city }}</p>
                    <p>{{ order.addressId.postalCode }}</p>
                </div>
                <div class="col-md-6">
                    <h4>Items</h4>
                    {% for product in order.products %}
                        <p>

                            <a href="{{ path('product_get', {"id": product.productId.id}) }}">
                                {{ product.productId.name }}
                            </a>

                            (x{{ product.quantity }})
                        </p>
                    {% endfor %}
                </div>
            </div>

            <hr>

            <p>
                Shipping: <strong>BGN</strong>5.00<br>
                <strong>Order total:</strong> <strong>BGN</strong>;{{ order.total | number_format(2) }}
            </p>
        </div>
    </div>
{% endblock %}
